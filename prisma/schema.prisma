generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  role      String   @default("EMPLOYEE") // EMPLOYEE, HR, ADMIN
  status    String   @default("ACTIVE") // ACTIVE, INACTIVE, SUSPENDED
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  profile         Profile?
  attendances     Attendance[]
  leaveRequests   LeaveRequest[]
  leaveBalances   LeaveBalance[]
  payrollRecords  PayrollRecord[]
  performanceGoals PerformanceGoal[]
  performanceReviews PerformanceReview[]
  announcements   Announcement[]
  
  // Manager relations
  managedEmployees Profile[] @relation("ManagerEmployee")
}

model Profile {
  id           String    @id @default(cuid())
  userId       String    @unique
  firstName    String
  lastName     String
  employeeId   String    @unique
  phone        String?
  address      String?
  dateOfBirth  DateTime?
  joinDate     DateTime
  salary       Float?
  avatar       String?
  
  // Department and designation
  departmentId   String?
  designationId  String?
  managerId      String?
  
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  // Relations
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  department   Department? @relation(fields: [departmentId], references: [id])
  designation  Designation? @relation(fields: [designationId], references: [id])
  manager      User?      @relation("ManagerEmployee", fields: [managerId], references: [id])
}

model Department {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  headId      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  profiles    Profile[]
}

model Designation {
  id          String   @id @default(cuid())
  title       String   @unique
  description String?
  level       Int      @default(1)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  profiles    Profile[]
}

model Attendance {
  id          String    @id @default(cuid())
  userId      String
  date        DateTime
  checkIn     DateTime?
  checkOut    DateTime?
  breakTime   Int       @default(0) // in minutes
  totalHours  Float     @default(0)
  status      String    @default("PRESENT") // PRESENT, ABSENT, HALF_DAY, LATE
  notes       String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
}

model LeaveRequest {
  id          String    @id @default(cuid())
  userId      String
  type        String    // CASUAL, SICK, EARNED, MATERNITY, PATERNITY
  startDate   DateTime
  endDate     DateTime
  days        Int
  reason      String
  status      String    @default("PENDING") // PENDING, APPROVED, REJECTED
  approvedBy  String?
  approvedAt  DateTime?
  rejectedReason String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model LeaveBalance {
  id          String   @id @default(cuid())
  userId      String
  type        String   // CASUAL, SICK, EARNED, MATERNITY, PATERNITY
  year        Int
  totalDays   Int
  usedDays    Int      @default(0)
  pendingDays Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, type, year])
}

model PayrollRecord {
  id              String   @id @default(cuid())
  userId          String
  month           Int
  year            Int
  basicSalary     Float
  allowances      Float    @default(0)
  deductions      Float    @default(0)
  overtime        Float    @default(0)
  bonus           Float    @default(0)
  grossSalary     Float
  tax             Float    @default(0)
  netSalary       Float
  status          String   @default("DRAFT") // DRAFT, PROCESSED, PAID
  processedAt     DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, month, year])
}

model PerformanceGoal {
  id          String   @id @default(cuid())
  userId      String
  title       String
  description String
  category    String   // INDIVIDUAL, TEAM, COMPANY
  priority    String   @default("MEDIUM") // LOW, MEDIUM, HIGH
  status      String   @default("IN_PROGRESS") // NOT_STARTED, IN_PROGRESS, COMPLETED, CANCELLED
  progress    Int      @default(0) // 0-100
  startDate   DateTime
  endDate     DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model PerformanceReview {
  id              String   @id @default(cuid())
  userId          String
  reviewerId      String
  period          String   // Q1_2024, H1_2024, ANNUAL_2024
  overallRating   Float
  goals           Json     // Array of goal ratings
  strengths       String
  improvements    String
  feedback        String
  status          String   @default("DRAFT") // DRAFT, SUBMITTED, APPROVED
  submittedAt     DateTime?
  approvedAt      DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Announcement {
  id          String   @id @default(cuid())
  title       String
  content     String
  type        String   @default("GENERAL") // GENERAL, URGENT, POLICY, EVENT
  priority    String   @default("MEDIUM") // LOW, MEDIUM, HIGH
  targetRoles Json?    // Array of roles to target
  authorId    String
  publishedAt DateTime?
  expiresAt   DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  author      User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
}

model Holiday {
  id          String   @id @default(cuid())
  name        String
  date        DateTime
  type        String   @default("PUBLIC") // PUBLIC, OPTIONAL, COMPANY
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([date])
}